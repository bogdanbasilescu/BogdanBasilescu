<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fragment_border_10dp"
        tools:context=".presentation.usecases.about.AboutFragment"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_spacing_10dp"
            android:src="@drawable/ic_profile_photo"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_about_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_photo"
            android:layout_marginBottom="@dimen/view_spacing_10dp"
            android:lineSpacingMultiplier="1.5"
            style="@style/tvWhiteAndSmall"
            tools:text="Write short biography here" />

        <TextView
            android:id="@+id/tv_about_obj_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_about_bio"
            android:layout_marginBottom="@dimen/view_spacing_10dp"
            android:text="@string/about_objective"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_about_obj_value"
            style="@style/tvWhiteAndSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_about_obj_label"
            android:layout_marginBottom="@dimen/view_spacing_10dp"
            tools:text="Write objectives here" />

    </RelativeLayout>
</ScrollView>
